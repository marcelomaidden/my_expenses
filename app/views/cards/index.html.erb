<h1>Cards</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Number</th>
      <th>Expiration</th>
      <th>Status</th>
      <th>Card category</th>
      <th>Manager</th>
      <th>Cvv</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.flatten.each do |card| %>
      <tr>
        <td><%= card.name %></td>
        <td><%= card.user_name %></td>
        <td><%= card.number %></td>
        <td><%= card.expiration %></td>
        <td><%= card.status %></td>
        <td><%= card.category_name %></td>
        <td><%= card.manager_name %></td>
        <td><%= card.cvv %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

