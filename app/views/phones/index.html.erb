<h1>Phones</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Manager</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phones.flatten.each do |phone| %>
      <tr>
        <td><%= phone.user_name %></td>
        <td><%= phone.manager_name %></td>
        <td><%= phone.number %></td>
        <td><%= link_to 'Show', phone %></td>
        <td><%= link_to 'Edit', edit_phone_path(phone) %></td>
        <td><%= link_to 'Destroy', phone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Phone', new_phone_path %>
