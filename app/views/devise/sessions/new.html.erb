<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <%= render FormControllComponent.new(icon_type: "envelope") do %>
                      <%= f.label :email %><br />
                      <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
                    <% end %>

                    <%= render FormControllComponent.new(icon_type: "lock") do %>
                      <%= f.label :password %><br />
                      <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
                    <% end %>

                    <% if devise_mapping.rememberable? %>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                      </div>
                    <% end %>

                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <%= f.submit "Log in" , class: "btn btn-primary btn-lg" %>
                    </div>
                  <% end %>

                  <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
