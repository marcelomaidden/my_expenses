<%= form_with(model: [@card, @card_expense]) do |form| %>
  <% if card_expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(card_expense.errors.count, "error") %> prohibited this card_expense from being saved:</h2>

      <ul>
        <% card_expense.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <input type = "hidden" name = "card_id" value = "<%= @card.id %>">
  <%= render FormControlComponent.new do %>
    <%= form.label :payable_id %>
    <select name="card_expense[payable]", class = "form-control">
      <% @payables.each do |payable| %>
        <option
          value = "<%= payable.payable_type %>:<%= payable.payable_id %>"
          <%= "selected" if payable_selected(payable) %>
        >
          <%= payable.name %>
        </option>
      <% end %>
    </select>
  <% end %>

  <%= render FormControlComponent.new do %>
    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control" %>
  <% end %>

  <%= render FormControlComponent.new do %>
    <%= form.label :installments %>
    <%= form.number_field :installments, min: 1, class: "form-control" %>
  <% end %>

  <%= render FormControlComponent.new do %>
    <%= form.label :value %>
    <%= form.number_field :value, min: 1, step: 0.1, class: "form-control" %>
  <% end %>

  <%= render FormControlComponent.new do %>
    <%= form.label :due_date %>
    <%= form.date_select :due_date, class: "form-control" %>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
